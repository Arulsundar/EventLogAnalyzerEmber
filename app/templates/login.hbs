    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://www.smone.vn/wp-content/uploads/2020/10/Eventlog-Analyzer.png" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            <button type="button" class="btn btn-secondary btn-floating mx-1"{{action 'signin'}} >
              
              ZOHO
            </button>
            {{!-- <div class="g-signin2" data-onsuccess={{action 'signin'}}></div> --}}
